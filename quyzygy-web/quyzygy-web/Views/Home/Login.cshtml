@using Microsoft.AspNetCore.Identity
@using Quyzygy.Entities;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{ ViewData["Title"] = "Log in"; }
@if (SignInManager.IsSignedIn(User))
{
    <script type="text/javascript">
        function getXSRFToken() {
            var token = '@Html.AntiForgeryToken()';
            token = $(token).val();
            return token;
        }
    </script>
    <h1>You are already authenticated.</h1>
}
else
{
    <div style="background-color:white;">
        <div class="container" style="width:50%;">
            <div class="row">
                <p class="flow-text">
                    <h5>Log in</h5>
                </p>
            </div>
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="email" type="email" class="validate">
                        <label for="email">Email</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" type="password" class="validate">
                        <label for="password">Password</label>

                        <a style="float:right;" class="waves-effect waves-light btn"><i class="material-icons right">keyboard_arrow_right</i>Log in</a>

                        <a href="SignUp" style="float:right; margin-right:10px;" class="waves-effect waves-light btn"><i class="material-icons right"></i>Sign up</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
}